<LinearLayout
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools"
    android:id = "@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context = ".MainActivity">

    <fragment
        android:id="@+id/fragment_withButton"
        android:name="kz.abcsoft.fragmentdemo2.WithButtonFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        tools:layout="@layout/fragment_with_button" />

    <fragment
        android:id="@+id/fragment_withTextView"
        android:name="kz.abcsoft.fragmentdemo2.WithTextViewFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        tools:layout="@layout/fragment_with_textview" />



</LinearLayout>